DEFINITION MODULE EditDisplay; (* vs I.11           Werner Winiger 24.2.82                  ===========  *)    FROM SYSTEM  IMPORT WORD;  EXPORT QUALIFIED    lines, columns, ReadMB, area, command, Mline, Mcol, McolSel,    ShowChar, ShowMsg, ShowFileName, SysErr,    SetCaret, ClearCaret, Invert, ClearMark, SetMark,    Blink, InvertCursor,    NewWindowBar, MoveWindowBar, DeleteWindowBar,    Clear, ClearLines, CopyL, PreviousChar, PaintLine, PaintCH,    empty, InitEditDisplay, StopDisplay, Options, OptionSET, optionSet,    fontName, HardCopy;  TYPE    Options = (SelInv, KeySel, ButSel, NewVs, HardC, Umlaut,               MacEnbl, ExoFont, ShowErr, CtrlInp, MovCar);    OptionSET = SET OF Options;  VAR    lines, columns,    area,                    (* the area, *)    command,                 (* command, *)    Mline,                   (* the line and column *)    Mcol: CARDINAL;          (* actually pointed to by the mouse *)    McolSel: BOOLEAN;        (* TRUE if one points exactly to col *)    optionSet: OptionSET;    fontName: ARRAY [0..24] OF CHAR;    PROCEDURE ReadMB (VAR mb: CARDINAL); (*     reads the mousebuttons (0..7) and the mouse' coordinates "Mx",    "My"; computes thereof "area", "command", "Mline", "Mcol", and    draws the according cursor *)  PROCEDURE NewWindowBar (L,mode: CARDINAL): CARDINAL;  PROCEDURE MoveWindowBar (i,L: CARDINAL);   PROCEDURE DeleteWindowBar (i: CARDINAL);  PROCEDURE ShowChar (ch: CHAR; k: CARDINAL);  PROCEDURE ShowMsg (s: ARRAY OF CHAR);  PROCEDURE ShowFileName (fN: ARRAY OF CHAR);  PROCEDURE SetCaret (l,n: CARDINAL);  PROCEDURE ClearCaret;  PROCEDURE Invert (line,fromCol,toCol,pat: CARDINAL);  PROCEDURE SetMark (i,l,n: CARDINAL);  PROCEDURE ClearMark (i: CARDINAL);  PROCEDURE Blink;  PROCEDURE Clear (VAR x0,x1: CARDINAL);  PROCEDURE ClearLines (L0,L1: CARDINAL);  PROCEDURE CopyL (from,to: CARDINAL);  PROCEDURE PreviousChar (VAR L,C: CARDINAL): CHAR;  PROCEDURE InvertCursor;  PROCEDURE PaintLine (L: CARDINAL);  PROCEDURE PaintCH (CH: CHAR; VAR x: CARDINAL);  PROCEDURE empty (L: CARDINAL): BOOLEAN;  PROCEDURE SysErr (s: ARRAY OF CHAR);  PROCEDURE InitEditDisplay;  PROCEDURE StopDisplay;  PROCEDURE HardCopy;END EditDisplay.