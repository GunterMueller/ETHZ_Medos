(* return the value of label. if this label is unknonw,
then it will be inserted into the list of the undeclared labels.
in this case the returned value is 0 *)

PROCEDURE OpenJump():BOOLEAN;
(* indicate the correct use of labels *)

PROCEDURE SetLocalChar(ch:CHAR;on:BOOLEAN;VAR res:Response);
(* if "on" is true then set the character "ch", else set any
other character than "ch" as startcharacter of local labels *)

PROCEDURE PrintLabList;
(* if there are any, a list of the undeclared labels
will be appended to the listing *)

END Labels.
